.detached-screen__machine
  background rgb(221, 221, 221)
  padding-bottom: 0
  .l-restrictor
    height: 100%
  .content-wrapper
    height: 100%
    padding: 0


.content-title__machine
  position: absolute

#machine-layout
  height: 100vh
  width: 100%

@media (max-width $palmtopWidth)
    .wbt-rotator__loaded .wbt-rotator-legend
      top: 0
      right: 0
      width: 320px

    .detached-screen__machine
      padding: 0 0 40px !important

    .content-title__machine
      margin-top: 20px !important
      left: 64px

@media (max-width $phoneWidth)
  .wbt-rotator-legend
    position: static

  .wbt-rotator__loaded .wbt-rotator-legend
    width: 100%

  .wbt-rotator-titles_list
    display: inline-block
    vertical-align: top
    width: 50%

  .wbt-rotator__descriptions .wbt-rotator-descriptions_list
    box-sizing border-box
    float: right
    padding-right: 20px
    padding-bottom: 20px
    top: 10px
    width: 49%
    max-width: 59%

  .wbt-rotator-legend
    background: rgb(51, 51, 51)

  .wbt-rotator-titles_item__active
    background: $colorRed
    &:before
      background: url("../img/plugins/legend-arrow-right__active.svg") no-repeat center !important;

  .wbt-rotator-titles_item:hover
    background: $colorRed












