// Color Map.
$headerFixedBg = #ffffff
$headerLinkColor = #666666

.header
  padding-top 40px

.header-fixed
  background $headerFixedBg
  box-shadow 0 0 30px 0 rgba(0, 0, 0, .13)
  min-height: 70px
  opacity: 0
  position fixed
  top 0
  transition: opacity 200ms
  left 0
  width: 100%
  z-index: -1
  .header-nav
    display flex
    justify-content: space-between
    align-items center
    margin: 0 auto
    max-width: 1440px
    min-height: 70px

.header-fixed__active
  opacity: 1
  z-index: 5

.header-fixed_btn
  background $btnRed
  border none
  color #ffffff
  font-family: $AvenirDemi
  font-size: 16px
  min-height 40px
  width 220px
  transition background 50ms
  &:hover
    background #da0018
    transition background 100ms
  &:focus
    outline none

.header-nav
  text-align left

.header-nav-list
  list-style none
  margin 0
  -webkit-padding-start 0

.header-nav-list_item
  display inline-block
  margin-right 30px
  vertical-align middle
  &:first-child
    margin-right 40px
  &:last-child
    margin-right 0

.header-nav-list_link
  color: $headerLinkColor
  cursor pointer
  font-size 14px
  font-family $AvenirRegular
  text-decoration none
  text-transform uppercase
  transition color 100ms
  &:hover
    color #eb0029
    transition color 50ms

.header-nav-list_link__lang
  font-family: $AvenirDemi

.header-nav_logo-img
  height 40px
  width 142px

