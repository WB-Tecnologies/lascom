.laser-videobg-full-wrapper
  display: none;
  position: fixed;
  background: rgba(0,0,0,.9);
  height: auto
  margin: 0 auto
  left: 0
  right: 0
  top: 0;
  bottom: 0;
  width: 100%
  z-index: 999999

.laser-videobg-full-wrapper__active
  display: block;

.laser-full-close
  background: rgba(255, 255, 255, .6) url('../img/general/icon-cross.svg')no-repeat center;
  background-size: 15px;
  border 1px solid #c7c7c7
  border-radius: 60px
  cursor: pointer;
  height:30px;
  line-height: 40px;
  text-align: center;
  margin: 0 auto;
  width:30px;
  position: absolute
  top: 30px;
  right: 20px;
  z-index: 9
  &:hover
    background #da0018 url('../img/general/icon-cross__active.svg')no-repeat center;
    background-size: 15px;
    border 1px solid #a70000
    color #ffffff;
    transition background 100ms

.laser-videobg__full
  top: 0
  bottom: 0
  margin: auto
  width: 100%;
