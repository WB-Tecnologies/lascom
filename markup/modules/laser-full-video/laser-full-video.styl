.laser-videobg-full-wrapper
  display: none;
  position: fixed;
  background: rgba(0,0,0,.9);
  height: auto
  margin: 0 auto
  left: 0
  right: 0
  top: 0;
  bottom: 0;
  width: 100%
  z-index: 999999

.laser-videobg-full-wrapper__active
  display: block;

.laser-full-close
  background: rgba(255, 255, 255, .6);
  border 1px solid #c7c7c7
  border-radius: 60px
  cursor: pointer;
  height:40px;
  line-height: 40px;
  text-align: center;
  margin: 0 auto;
  width:100px;
  position: absolute
  top: 30px;
  right: 20px;
  z-index: 9
  &:hover
    background #da0018
    border 1px solid #a70000
    color #ffffff;
    transition background 100ms

.laser-videobg__full
  top: 0
  bottom: 0
  margin: auto
