.detached-screen__ulsp
  background url("../img/general/bg-ulsp.jpg") no-repeat center
  background-size cover

.content-title__ulsp
  color #ffffff
  margin-bottom: 10px

.ulsp-content_subtitle
  color #ffffff
  font-family: $AvenirRegular
  font-size: 18px
  text-transform: uppercase
  margin: 0 0 4.45vh 0

.ulsp-content_description
  color #ffffff
  font-family: $AvenirDemi
  font-size: 21px
  line-height: 30px
  margin-bottom: 2.3vh
  margin-top: 0

.ulsp-content_btn
  background $btnRed
  border none
  color #ffffff
  font-family: $AvenirDemi
  font-size: 18px
  margin-top 20vh
  min-height 80px
  width 100%
  transition background 50ms
  &:hover
    background #da0018
    transition background 100ms
  &:focus
    outline none
