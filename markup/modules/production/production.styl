.detached-screen__production
  background-color: #ffffff;
  min-height: 100%

.production-machine
  background url("../img/general/bg-ulsp.png")no-repeat center;
  top: 120px
  text-align:center
  width:100%

.proguction-machine_img
  max-width: 1440px
  width: 100%

.detached-screen_machine
  background: url("../img/general/machine-ulsp.png") no-repeat center
  background-size contain
  position: absolute
  height: 100%
  width: 100%

.production-content_btn
  background rgba(255, 255, 255, .6)
  box-sizing border-box
  border 1px solid #c7c7c7
  border-radius: 60px
  color $colorRed;
  display: block
  font-family: $AvenirDemi
  font-size: 18px
  margin: -120px auto 0
  position: relative;
  padding: 30px 50px 30px 20px;
  text-align: center
  transition background 50ms
  text-decoration: none
  max-width: 944px
  width 100%
  &:hover
    background #da0018
    border 1px solid #a70000
    color #ffffff;
    transition background 100ms
  &:focus
    outline none
