.detached-screen__production
  background-color: #ffffff;
  min-height: 100%
  padding-bottom: 0

.production-machine
  background url("../img/general/bg-ulsp.png")no-repeat center;
  top: 120px
  text-align:center
  margin-bottom: 20px
  width:100%

.proguction-machine_img
  max-width: 1440px
  width: 100%

.detached-screen_machine
  background: url("../img/general/machine-ulsp.png") no-repeat center
  background-size contain
  position: absolute
  height: 100%
  width: 100%


.content-title_production
  margin-top:-10px

.production-content_btn
  background $btnRed
  box-sizing border-box
  border none
  border-radius: 8px
  color #ffffff
  display: block
  font-family: $AvenirDemi
  font-size: 18px
  margin:0 auto 40px
  padding: 30px 50px 30px 20px;
  text-align: center
  transition background 50ms
  text-decoration: none
  max-width: 786px
  width 100%
  &:hover
    background #da0018
    transition background 100ms
  &:focus
    outline none
  &:after
    content ''
    background: url('../img/general/icon-arrow-right.svg')no-repeat center;
    height: 20px
    position: absolute
    right: 30px
    top 30px
    width: 12px

@media (max-width: 600px)
  .production-content_btn
    font-size: 16px
    line-height: 20px

@media (max-width: 553px)
  .production-content_btn:after
    top: 40px

@media (max-width: 500px)
  .production-content_btn:after
    top: 30px

@media (max-width: 465px)
  .production-content_btn:after
    top: 40px

@media (max-width: $smallPhoneWidth)
  .production-content_btn
    padding: 20px 20px 20px 10px

  .production-content_btn:after
    top: 30px
    right: 10px









