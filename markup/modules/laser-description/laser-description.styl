.detached-screen__laser-description
  background #ffffff
  padding-bottom: 0 !important

.content-wrapper__laser-description
  padding-top: 80px !important;
  padding-bottom: 0 !important

.laser-description-content_description
  color $colorTextGrey
  font-family: $AvenirRegular
  font-size: 21px
  line-height: 30px
  margin-bottom: 25px
  margin-top: 0

.laser-content_img
  display: block;
  margin: 52px auto 105px;
  width: 100%;

  @media only screen and (max-width: $palmtopWidth)
    margin-bottom: 0

.zoom-wrapper
  position: relative

.zoomContainer
  cursor: none

.laser-content_description__mobile
  color $colorRed !important
  display: none
  font-size: 16px
  line-height: 25px

@media (max-width: $phoneWidth)
  .detached-screen__laser-description .content-wrapper
    padding-top: 5px

@media (max-width: 640px)
  .laser-description-content_description
    font-size: 16px
    line-height: 25px

  .laser-content_description
    display: none

  .laser-content_description__mobile
    display: block

