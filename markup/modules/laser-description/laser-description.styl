.detached-screen__laser-description
  background #ffffff

.content-wrapper__laser-description
  padding-top: 22px !important;

.laser-description-content_description
  color $colorTextGrey
  font-family: $AvenirRegular
  font-size: 18px
  line-height: 24px
  margin-bottom: 22px
  margin-top: 0

.laser-content_img
  margin-bottom: 24px
  margin-top: 14px
  width: 100%

.laser-content_description__mobile
  color $colorRed !important
  display: none
  font-size: 16px
  line-height: 25px

@media (max-width: $phoneWidth)
  .detached-screen__laser-description .content-wrapper
    padding-top: 5px

@media (max-width: 640px)
  .laser-description-content_description
    font-size: 16px
    line-height: 25px

  .laser-content_description
    display: none

  .laser-content_description__mobile
    display: block

