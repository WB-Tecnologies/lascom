$colorInputBorder = #cccccc
$colorInputBorderFocus = #b3b3b3

.modal-screen
  background: rgba(0,0,0,.5)
  display: none;
  position: fixed;
  top: 0
  left: 0
  height: 100%
  width: 100%
  z-index: -1
  .content-wrapper
    background: #ffffff
    border-radius: 4px
    box-sizing: border-box
    padding: 35px 24px;
    margin-top: 90px;
    max-width: 464px;

.modal-screen__active
  display: block
  z-index: 11

.detached-screen__order
  background: #ffffff

.content-title__order
  font-size: 24px !important
  color: #262626 !important;
  text-align: center;
  margin-top: 0 !important;

.order-form-list
  list-style: none
  margin: 0
  padding: 0
  width: 100%

.order-form-list_item
  margin-bottom: 24px
  position: relative
  &:last-child
    margin-bottom: 0

.order-form_input
  box-sizing border-box
  border 1px solid $colorInputBorder
  border-radius: 4px
  color $colorRed
  font-family: $AvenirRegular
  font-size: 16px
  padding: 16px 15px
  position: relative
  text-shadow: 0px 0px 0px #000;
  width: 100%
  -webkit-text-fill-color: transparent;
  -webkit-appearance: none;
  z-index: 0
  &:focus
    font-family: $AvenirDemi
    border-color $colorInputBorderFocus
    outline: none
    z-index: 1
    &::-webkit-input-placeholder
        text-shadow: none
        -webkit-text-fill-color: transparent
  &::-webkit-input-placeholder
    text-shadow: none
    -webkit-text-fill-color: initial

.message-wrapper
  position: relative

.order-form_textarea
  box-sizing border-box
  border 1px solid $colorInputBorder
  border-radius: 4px
  color $colorRed
  font-family: $AvenirRegular
  font-size: 16px
  line-height: 20px
  margin-top: 24px;
  min-height: 180px
  padding: 15px
  position: relative
  resize none
  text-shadow: 0px 0px 0px #000;
  width: 100%
  -webkit-text-fill-color: transparent;
  z-index: 0
  &:focus
    font-family: $AvenirDemi
    border-color $colorInputBorderFocus
    outline: none
    z-index: 1
    &::-webkit-input-placeholder
        text-shadow: none
        -webkit-text-fill-color: transparent
  &::-webkit-input-placeholder
    text-shadow: none
    -webkit-text-fill-color: initial

.order-submit_btn
  background $btnRed
  border none
  border-radius: 60px
  color #ffffff
  font-family: $AvenirDemi
  font-size: 18px
  margin-top 24px
  min-height 64px
  width 100%
  transition background 50ms
  &:hover
    background #da0018
    transition background 100ms
  &:focus
    outline none

.order-submit_tnx
  color $colorRed
  display: none
  font-size: 14px
  font-family: $AvenirRegular
  text-align: center
  margin-top: 15px

label.error
  color: $colorRed;
  font-size: 12px;
  font-family: $AvenirRegular
  position: absolute;
  right: 10px;
  top: 10px;
  z-index: 9

#message-error
 top: 30px
 z-index: 9

@media (max-width: $phoneWidth)
  .detached-screen__order .content-wrapper
    padding-top: 5px







