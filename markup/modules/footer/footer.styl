$colorFooterLink = #00005B;

.footer
  background: #ffffff
  border-top: 1px solid #cccccc
  box-sizing: border-box
  line-height: 20px
  padding: 20px
  margin-top: 0
  width: 100%
  .l-restrictor
    position: relative

.footer_info
  color: $colorTextGrey;
  font-family: $AvenirRegular
  font-size: 14px
  display: inline-block;
  vertical-align: top;
  margin-right: 100px;

.footer-label
  color $colorFooterLink
  font-family: $AvenirRegular
  font-size: 12px
  display: inline-block;
  vertical-align: top;

.footer-link
  color $colorFooterLink
  font-family: $AvenirDemi
  text-decoration: none
  &:hover
    border-bottom 1px solid

.scrolltop-btn
  background: url('../img/general/icon-arrow-top.svg')no-repeat center;
  background-size: 13px;
  border-radius: 6px
  cursor: pointer
  position: absolute
  right: 0;
  top: 0;
  height: 20px
  width: 20px
  &:hover
    background: url('../img/general/icon-arrow-top__active.svg')no-repeat center;
    background-size: 13px;
