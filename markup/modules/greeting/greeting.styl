$descriptionTextColor = #262626
$btnRed = #EB0029

.detached-screen__greenting
  background rgb(102, 102, 102) url("../img/general/bg-greeting.jpg") no-repeat center
  background-size cover
  opacity: 1 !important

.greeting-content
  padding-top 26.7vh

.greeting-content_description
  color $descriptionTextColor
  font-family: $AvenirDemi
  font-size 56px
  line-height 60px
  margin 0
  max-width: 755px

.greeting-content_btn
  background $btnRed
  border none
  color #ffffff
  font-family: $AvenirDemi
  font-size: 18px
  margin-top 20vh
  min-height 80px
  width 100%
  transition background 50ms
  &:hover
    background #da0018
    transition background 100ms
  &:focus
    outline none

@media (max-width: $phoneWidth)
  .greeting-content_description
    font-size: 46px
    line-height: 50px

@media (max-width: 500px)
  .greeting-content
    padding-top: 120px

  .greeting-content_btn
    margin-top: 100px

@media (max-width: 500px)
  .greeting-content_description
    font-size: 40px
    line-height: 46px
    max-width: 100%

@media (max-width: $smallPhoneWidth)
  .greeting-content_description
    font-size: 32px
    line-height: 35px

  .greeting-content
    padding-top: 60px

  .greeting-content_btn
    margin-top: 50px







