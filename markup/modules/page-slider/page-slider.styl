.detached-screen
  box-shadow 0 0 30px 0 rgba(0,0,0,0.13)
  box-sizing border-box
  min-height 100vh
  margin: 0 auto;
  transition: transform $mobHeaderSpeed ease-out;
  will-change: transform;
  width 100%
  &:last-child
    box-shadow: none
    padding-bottom: 0
  &:first-child
    @media only screen and (max-width: $palmtopWidth)
        min-height: 80vh

  @media only screen and (max-width: $palmtopWidth)
    min-height: initial

.detached-screen__machine-header-open
  padding-top: 100px !important

.detached-screen__buffer
  height: 0
  min-height: 0
  padding: 0

.detached-screen_overlay
  background #000
  position absolute
  display: none
  bottom 0
  top 0
  opacity 0
  right 0
  left 0
  z-index 3

.detached-screen_overlay__transparent
  z-index: -1

.content-wrapper
  margin: 0 auto
  max-width: 800px
  padding: 20px 20px 80px;
  position: relative
  z-index: 2

  @media only screen and (max-width: $palmtopWidth)
    padding-bottom: 0

.content-title
  color #000
  font-family: $AvenirDemi
  font-size: 32px
  margin: 60px 0 25px
  text-align: center
  text-decoration: none

.detached-screen_icon-img
  max-width 100%

.detached-screen_icon-subtitle
  color #ffffff
  font-size 24px
  font-weight normal
  margin 20px 0

.detached-screen_description
  margin-top 30px

.detached-screen_description-list
  list-style none
  margin-top 72px
  padding 0

.detached-screen_description-list_text
  font-size 48px
  line-height 56px
  position relative
  &:before
    background #ffffff
    border-radius 50%
    content ""
    height 16px
    left -35px
    position absolute
    top 18px
    width 16px

// .mob-menu-active .detached-screen


@media (max-width: 1440px)
  .detached-screen:before,
  .detached-screen:after
    display: none

@media (max-width: $palmtopWidth)
  .detached-screen
    box-shadow: none;
    border-top: 1px solid #c7c7c7;
    padding: 0 64px 40px

@media (max-width: 500px)
  .detached-screen
    padding: 0 0 40px

  .detached-screen__contacts .l-restrictor
    padding-left: 20px
    padding-right: 20px

@media (max-width: $phoneWidth)
  .detached-screen
    position: relative !important
    opacity: 1

@media (max-width: $smallPhoneWidth)
  .content-title
    font-size: 24px
    margin-top: 20px
    margin-bottom: 20px
