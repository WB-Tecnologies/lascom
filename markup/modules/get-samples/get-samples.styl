$colorInputBorder = #F89DAC
$colorInputBorderFocus = #EB0029

.detached-screen__samples
  background: #ffffff

.content-title__samples
  font-size: 24px !important
  margin-bottom: 2.23vh !important

.samples-content_description
  color: $colorTextGrey
  font-family: $AvenirRegular
  font-size: 21px
  line-height: 30px
  margin-bottom: 4.45vh

.samples-form-list
  list-style: none
  margin: 0
  padding: 0
  width: 100%

.samples-form-list_item
  margin-top: -1px
  position: relative
  &:first-child
    margin-top: 0

.samples-form_input
  box-sizing border-box
  border 1px solid $colorInputBorder
  color $colorRed
  font-family: $AvenirRegular
  font-size: 16px
  line-height: 50px
  padding: 0 15px
  position: relative
  text-shadow: 0px 0px 0px #000;
  width: 100%
  -webkit-text-fill-color: transparent;
  z-index: 0
  &:focus
    font-family: $AvenirDemi
    border-color $colorInputBorderFocus
    outline: none
    z-index: 1
    &::-webkit-input-placeholder
        text-shadow: none
        -webkit-text-fill-color: transparent
  &::-webkit-input-placeholder
    text-shadow: none
    -webkit-text-fill-color: initial

.samples-form_textarea
  box-sizing border-box
  border 1px solid $colorInputBorder
  color $colorRed
  font-family: $AvenirRegular
  font-size: 16px
  line-height: 20px
  margin-top: 2.2vh
  min-height: 180px
  padding: 15px 130px 15px 15px;
  position: relative
  resize none
  text-shadow: 0px 0px 0px #000;
  width: 100%
  -webkit-text-fill-color: transparent;
  z-index: 0
  &:focus
    font-family: $AvenirDemi
    border-color $colorInputBorderFocus
    outline: none
    z-index: 1
    &::-webkit-input-placeholder
        text-shadow: none
        -webkit-text-fill-color: transparent
  &::-webkit-input-placeholder
    text-shadow: none
    -webkit-text-fill-color: initial

.samples-submit_btn
  background $colorRed
  border none
  color #ffffff
  font-family: $AvenirDemi
  font-size: 18px
  margin-top 2.2vh
  min-height 80px
  width 100%
  transition background 50ms
  &:hover
    background #da0018
    transition background 100ms
  &:focus
    outline none

@media (max-width: $phoneWidth)
  .detached-screen__samples .content-wrapper
    padding-top: 5px

  .samples-content_description
    display: none

  .samples-form_textarea
    padding-right: 20px

  .samples-form_textarea
    margin-top: -1px

  .samples-submit_btn
    min-height: 50px

  .order-form_textarea
    margin-top: -1px !important

  label.error
    top: 2px !important
    right: 5px !important









