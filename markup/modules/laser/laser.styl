.detached-screen__laser
  background #ffffff
  .content-wrapper
    max-width: 841px

  .content
    position: relative


.detached-screen__laser .l-restrictor
    position: relative

.video-wrapper
  position: absolute
  height: 100%
  overflow: hidden
  width: 100%

.video-filter
  background: rgba(0, 0, 0, 0.5)
  position: absolute
  height: 100%
  width: 100%
  transition: opacity 300ms
  z-index: 1

.laser-videobg
  position: absolute;
  height: auto
  margin: 0 auto
  left: 0
  right: 0
  width: 100%
  z-index: 0;

.laser-videobg__book
  height: 100%

.content-title__laser
  color #ffffff !important
  transition: opacity 300ms

.laser-content_description
  color #ffffff
  font-family: $AvenirDemi
  font-size: 21px
  line-height: 30px
  margin-bottom: 2.3vh
  margin-top: 0
  transition: opacity 300ms

.laser-sound-btn {background:url('../img/general/icon-sound-on.svg')no-repeat center;cursor:pointer;height:40px;width:100px;position:absolute;top:40px;right:40px;transition: opacity 300ms;z-index: 9999;}
.laser-sound-btn:hover {background:url('../img/general/icon-sound-on__hover.svg')no-repeat center;}

.video-back {background:url('../img/general/icon-sound-off.svg')no-repeat center;cursor:pointer;height:40px;width:100px;position:absolute;top:40px;right:40px;transition: opacity 300ms;opacity: 0;z-index: 9999;}
.video-back:hover {background:url('../img/general/icon-sound-off__hover.svg')no-repeat center;}

.detached-screen__video .video-filter
    background:rgba(0,0,0,0);

.detached-screen__video .laser-content_description
    opacity:0;

.detached-screen__video .laser-sound-btn
  display: none;

.detached-screen__video .content-title__laser
  opacity: 0

.detached-screen__video .video-back
  opacity: 1

@media (max-width: $palmtopWidth)
  .detached-screen__laser
    padding: 0 0 40px !important


@media (max-width: $palmtopWidth)
  .detached-screen__laser
    .content-wrapper
      padding-left: 20px
      padding-right: 20px

@media (max-width: 640px)
  .detached-screen__laser
    display: none

  .content-title__laser
    position: relative
    top: -70px






