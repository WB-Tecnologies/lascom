.detached-screen__laser
  background #ffffff
  .content
    position: relative


.detached-screen__laser .l-restrictor
    position: relative

.video-wrapper
  position: absolute
  top: 0
  height: 100%
  overflow: hidden
  width: 100%

.video-filter
  background: rgba(0, 0, 0, 0.5)
  position: absolute
  height: 100%
  width: 100%
  transition: opacity 300ms
  z-index: 1

.laser-videobg
  bottom: 0;
  top: 0;
  position: absolute;
  height: auto
  margin: auto
  left: 0
  right: 0
  width: 100%;
  z-index: -1;

.laser-videobg__book
  height: 100%

.content-title__laser
  color #ffffff !important
  transition: opacity 300ms
  margin-bottom: 42px !important;

.laser-content_description
  color #ffffff
  font-family: $AvenirDemi
  font-size: 21px
  line-height: 30px
  margin-bottom: 25px
  margin-top: 0
  transition: opacity 300ms

.laser-sound-btn {
    border 2px solid #fff
    border-radius: 60px;
    color #fff
    cursor: pointer
    display: block;
    font-family: $AvenirDemi
    font-size: 16px
    margin: 64px auto 0;
    min-height 64px
    text-align: center
    transition 100ms
    text-transform: uppercase
    line-height 64px
    max-width: 304px;
    position: relative;
    width 100%
    transition background 50ms
    &:before {
      content: '';
      background: url('../img/general/icon-play.svg')no-repeat center;
      height: 13px;
      position: absolute;
      top: 24px;
      right: 24px;
      width: 11px;
    }
}
.laser-sound-btn:hover {
    background #da0018
    border 2px solid #da0018
}

.video-back {background:url('../img/general/icon-sound-off.svg')no-repeat center;cursor:pointer;height:40px;width:100px;position:absolute;top:40px;right:40px;transition: opacity 300ms;opacity: 0;z-index: 9999;}
.video-back:hover {background:url('../img/general/icon-sound-off__hover.svg')no-repeat center;}

.detached-screen__video .video-filter
    background:rgba(0,0,0,0);

.detached-screen__video .laser-content_description
    opacity:0;

.detached-screen__video .laser-sound-btn
  display: none;

.detached-screen__video .content-title__laser
  opacity: 0

.detached-screen__video .video-back
  opacity: 1

@media (max-width: $palmtopWidth)
  .detached-screen__laser
    padding: 0 0 40px !important


@media (max-width: $palmtopWidth)
  .detached-screen__laser
    .content-wrapper
      padding-left: 20px
      padding-right: 20px

@media (max-width: 640px)
  .detached-screen__laser
    display: none

  .content-title__laser
    position: relative
    top: -70px






