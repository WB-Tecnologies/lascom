.machine-header
  background $headerFixedBg
  box-sizing border-box
  box-shadow 0 0 30px 0 rgba(0, 0, 0, .13)
  min-height: 70px
  position fixed
  top 0
  transition: opacity 200ms
  left 0
  right: 0
  max-width: 1440px
  margin: 0 auto
  padding: 0 20px
  width: 100%
  z-index: 9999
  .header-nav
    display flex
    justify-content: space-between
    align-items center
    margin: 0 auto
    max-width: 1440px
    min-height: 70px

.header-nav_logo-img__machine
  height: 30px
  position: relative
  top: 3px
  width: 106px
