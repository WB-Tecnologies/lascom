.detached-screen
  min-height 900px
  padding 0 20px
  text-align center

.detached-screen_icon
  margin-top 296px

.detached-screen_description
  margin-top 30px

.detached-screen_description-text
  color #ffffff
  font-size 48px
  font-family sans-serif
  font-weight normal
  line-height 56px
  margin 0 auto
  max-width 1000px

.detached-screen_btn
  background #eb0029
  border none
  color #ffffff
  margin-top 60px
  min-height 60px
  min-width 300px
  transition background 50ms
  &:hover
    background #da0018
    transition background 100ms

.l-restrictor
  margin 0 auto
  max-width 1300px
  padding-bottom 200px
